<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bottle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF6D00</item>
        <item name="colorPrimaryVariant">#304FFE</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/Theme.Bottle.TextView</item>
    </style>

    <style name="Theme.Bottle.Twist.Fragment" parent="Theme.Bottle.TextView">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="Theme.Bottle.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#4C3C31</item>
        <item name="android:fontFamily">@font/adigiana_2</item>
    </style>
</resources>